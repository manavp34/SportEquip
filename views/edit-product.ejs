<%- include('header') %>

<div class="container">
    <h1 class="text-center my-4">✏️ Edit Product</h1>
    <form action="/products/edit/<%= product.product_id %>" method="POST">
        <label>Name:</label>
        <input type="text" name="name" value="<%= product.name %>" required class="form-control"><br>

        <label>Description:</label>
        <textarea name="description" required class="form-control"><%= product.description %></textarea><br>

        <label>Price:</label>
        <input type="number" step="0.01" name="price" value="<%= product.price %>" required class="form-control"><br>

        <label>Stock Quantity:</label>
        <input type="number" name="stock_quantity" value="<%= product.stock_quantity %>" required class="form-control"><br>

        <label>Category:</label>
        <input type="text" name="category" value="<%= product.category %>" required class="form-control"><br>

        <button type="submit" class="btn btn-success">Update Product</button>
    </form>
</div>

<%- include('footer') %>