<%- include('header') %>

<div class="container">
    <h1 class="text-center my-4">âž• Add New Product</h1>
    <form action="/products/add" method="POST">
        <label>Name:</label>
        <input type="text" name="name" required class="form-control"><br>

        <label>Description:</label>
        <textarea name="description" required class="form-control"></textarea><br>

        <label>Price:</label>
        <input type="number" step="0.01" name="price" required class="form-control"><br>

        <label>Stock Quantity:</label>
        <input type="number" name="stock_quantity" required class="form-control"><br>

        <label>Category:</label>
        <input type="text" name="category" required class="form-control"><br>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>

