<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Total</th>
            <th>Status</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
            <tr>
                <td><%= order.order_id %></td>
                <td><%= order.user_id %></td>
                <td>$<%= Number(order.total_price).toFixed(2) %></td>
                <td><%= order.status %></td>
                <td><%= order.created_at %></td>
                <td>
                    <a href="/orders/view/<%= order.order_id %>" class="btn btn-info btn-sm">View</a>
                    <a href="/orders/edit/<%= order.order_id %>" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/orders/delete/<%= order.order_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?')">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>